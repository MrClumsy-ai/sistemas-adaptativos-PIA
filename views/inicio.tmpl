            ];

            // Configuraci칩n del gr치fico
            const config = {
              type: 'candlestick',
              data: {
                datasets: [{
                  label: 'Precio BTC/USD',
                  data: datosBTC,
                  color: {
                    up: '#4CAF50',
                    down: '#FF5252',
                    unchanged: '#2196F3'
                  },
                  borderColor: '#000',
                }]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                  x: {
                    type: 'time',
                    time: {
                      unit: 'day',
                      displayFormats: { day: 'dd MMM' }
                    },
                    ticks: { color: '#333' }
                  },
                  y: {
                    ticks: { 
                      color: '#333',
                      callback: (value) => '$' + value.toLocaleString()
                    }
                  }
                },
                plugins: {
                  legend: { display: false },
                  tooltip: {
                    callbacks: {
                      label: (ctx) => {
                        const item = ctx.raw;
                        return [
