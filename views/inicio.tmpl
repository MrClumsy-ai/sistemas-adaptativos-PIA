            // Datos de ejemplo para Bitcoin
            const datosBTC = [
              {t: new Date('2024-01-01').getTime(), o: 42000, h: 43800, l: 41500, c: 43200},
              {t: new Date('2024-01-02').getTime(), o: 43200, h: 44500, l: 42800, c: 44000},
